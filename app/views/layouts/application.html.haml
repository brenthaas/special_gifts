!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }
    %title Wishlist
    = csrf_meta_tags
    = stylesheet_link_tag 'application',
      media: 'all',
      'data-turbolinks-track' => 'reload'
  %body
    = render 'layouts/navbar'

    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert

    = yield
